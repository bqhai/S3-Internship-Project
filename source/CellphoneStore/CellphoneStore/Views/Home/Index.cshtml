@{
    ViewBag.Title = "Home Page";

}
@model List<Model_CellphoneStore.ProductVersionMapped>

<div class="container">
    <div class="row" style="margin-left: -50px">
        <div class="col-sm-8">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="myCarousel" data-slide-to="1"></li>
                    <li data-target="myCarousel" data-slide-to="2"></li>
                    <li data-target="myCarousel" data-slide-to="3"></li>
                    <li data-target="myCarousel" data-slide-to="4"></li>
                    <li data-target="myCarousel" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/Banner/Home_Banner/GLX-Note-Series_Sliding-v4.jpg" alt="Galaxy Note" style="width:100%;">
                    </div>
                    <div class="item">
                        <img src="~/Content/Banner/Home_Banner/Slide_800x300-a93.jpg">
                    </div>
                    <div class="item">
                        <img src="~/Content/Banner/Home_Banner/Sliding-800x300_2_.jpg">
                    </div>
                    <div class="item">
                        <img src="~/Content/Banner/Home_Banner/Nokia2.jpg">
                    </div>
                    <div class="item">
                        <img src="~/Content/Banner/Home_Banner/GT_2_PRO_Sliding-v2.jpg">
                    </div>
                    <div class="item">
                        <img src="~/Content/Banner/Home_Banner/Slide_800x300-v120.jpg">
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row list-banner">
                <div class="col-sm-2 banner-item">
                    <p>NOTE 20 SERIES</p>
                </div>
                <div class="col-sm-2 banner-item">
                    <p>OPPO A93</p>
                </div>
                <div class="col-sm-2 banner-item">
                    <p>APPLE WATCH SE|S6</p>
                </div>
                <div class="col-sm-2 banner-item">
                    <p>MỞ BÁN NOKIA 2.4</p>
                </div>
                <div class="col-sm-2 banner-item">
                    <p>HUAWEI GT2 PRO</p>
                </div>
                <div class="col-sm-2 banner-item">
                    <p>SIM VIETTEL V120+</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <img src="~/Content/Banner/Home_Banner/tab_s7_plus_right_banner_16.jpg" width="375" height="175" />
            <img src="~/Content/Banner/Home_Banner/Right_banner_750x350_-_iPhone.jpg" width="375" height="175" />
        </div>
        <div>
            <img src="~/Content/Banner/Home_Banner/1920x75---iPhone12_1.gif" />
        </div>
        <div>
            <div style="height:30px; background-color: red; color: white; text-align: center">
                <h3>Hot sale cuối tuần</h3>
            </div>
            <div class="product-container">
                @foreach (var item in Model)
                {
                    <table class="product-item">
                        <tr>
                            <td>
                                <a href="@Url.Action("ProductDetails", "Product", new {productVersionID = item.ProductVersionID})">
                                    <img src="~/Content/Images/Product/@item.Image" width="200" height="200" />
                                </a>
                            </td>
                        </tr>
                        <tr style="height: 70px">
                            <td>
                                <p>@item.ProductVersionName</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b style="color: orangered">@item.Price VNĐ</b>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p><strike>@item.ListPrice VNĐ</strike></p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>
                                    <i class="fa fa-star checked" aria-hidden="true"></i>
                                    <i class="fa fa-star checked" aria-hidden="true"></i>
                                    <i class="fa fa-star checked" aria-hidden="true"></i>
                                    <i class="fa fa-star checked" aria-hidden="true"></i>
                                    <i class="fa fa-star checked" aria-hidden="true"></i>
                                    10 đánh giá
                                </span>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>

</div>