
@{
    ViewBag.Title = "AccountInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Quản lý tài khoản</h3>
<div class="container">
    <div class="row" style="margin-top:30px">
        <div class="col-sm-3 borderbox">
            <div class="account-avatar">
                <img src="~/Content/Logo/default-avatar.png" width="45" height="45"/>
                <div class="info">
                    <p>Xin chào</p>
                    <br />
                    <strong>@Session["Account"].ToString()</strong>
                </div>
            </div>
            <ul class="account-category">
                <li>
                    <a href="@Url.Action("AccountInfo", "User", new { chooseOption = 1 })">
                        <div class="icon">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>                             
                        <span>Thông tin tài khoản</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AccountInfo", "User", new { chooseOption = 2 })">
                        <div class="icon">
                            <i class="fa fa-bell" aria-hidden="true"></i>
                        </div>                    
                        <span>Thông báo của tôi</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="icon">
                            <i class="fa fa-list-alt" aria-hidden="true"></i>
                        </div>                       
                        <span>Thông tin đơn hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("AccountInfo", "User", new { chooseOption = 4 })">
                        <div class="icon">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </div>                        
                        <span>Địa chỉ giao hàng</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="icon">
                            <i class="fa fa-heart" aria-hidden="true"></i>
                        </div>                       
                        <span>Sản phẩm yêu thích</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-sm-9 borderbox">
            @if (Convert.ToInt32(TempData["ChooseOption"]) == 1)
            {
                @Html.Action("CustomerInfo", "User")
            }
            else if (Convert.ToInt32(TempData["ChooseOption"]) == 2)
            {
                @Html.Action("Notification", "User")
            }
            else if (Convert.ToInt32(TempData["ChooseOption"]) == 4)
            {
                @Html.Action("CustomerAddress", "User")
            }
            else
            {

            }
        </div>
    </div>
</div>

